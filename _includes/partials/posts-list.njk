<ul reversed class="blog-posts">
  {% for post in postslist | reverse %} {{post.keys}}
  <li class="{% if post.url == url %} postlist-item-active{% endif %}">
    <h3>
      <a href="{{ post.url }}" class="postlist-link">
        {% if post.data.title %}{{ post.data.title }}{% else %}<code
          >{{ post.url }}</code
        >{% endif %}
      </a>
    </h3>

    {% if post.data.description %}
    <div>
      {{ post.data.description }}
      <a href="{{ post.url }}" class="postlist-link">...more</a>
    </div>
    {% endif %}

    <ul class="list-horizontal">
      <time datetime="{{ post.date | readableDate }}"
        >{{ post.date | readableDate }}</time
      >

      {%- for tag in post.data.tags | filterTagList %} {%- set tagUrl %}/tags/{{
      tag | slugify }}/{% endset %}
      <li class="page-tag">
        <a href="{{ tagUrl }}" class="post-tag">{{ tag }}</a>
      </li>
      {%- endfor %}
    </ul>
  </li>

  {% endfor %}
</ul>
